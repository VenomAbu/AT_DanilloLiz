@model IEnumerable<AT_DanilloLiz.Models.Endereco>

@{
    ViewData["Title"] = "Endereços";
}

<h1>Endereços</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rua)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EnderecoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.EnderecoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.EnderecoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
